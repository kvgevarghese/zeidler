<%= form_with(model: memo, local: true, html: {:class=> "form-horizontal"}) do |form| %>
  <% if memo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(memo.errors.count, "error") %> prohibited this memo from being saved:</h2>

      <ul>
      <% memo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= form.label :memo %>:
      <%= file_name(@memo.memo_url) if @memo.memo? %>
      <%= form.hidden_field :memo_cache %>
      <%= form.file_field :memo %>
    </div>

  <div class="form-group">
    <%= form.label :country %>:
    <%= form.select(:country,country_list.collect { |obj| obj},:selected=>@memo.country) %>
  </div>

  <div class="form-group">
    <%= form.label :name %>:
    <%= form.text_field :name, id: :memo_name %>
  </div>
  <div class="form-group">
    <%= form.label :description %>:
    <%= form.text_field :description, id: :memo_description %>
  </div>

  <div class="actions">
    <%= form.submit%>
  </div>
<% end %>
